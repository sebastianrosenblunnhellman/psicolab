//Prisma schema file

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    schemas  = ["neon_auth"]
}

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["multiSchema"]
}

model users_sync {
    id           String          @id @db.Text
    raw_json     Json?           @db.JsonB
    name         String?         @db.Text
    email        String?         @db.Text
    created_at   DateTime?       @db.Timestamptz
    updated_at   DateTime?       @db.Timestamptz
    deleted_at   DateTime?       @db.Timestamptz
    user_profile user_profile?
    saved_content saved_content[]
    comments     comments[]

    @@schema("neon_auth")
}

model user_profile {
    user_id             String   @id @db.Text
    name                String?
    last_name           String?
    bio                 String?
    profile_picture_url String?
    location            String?
    website             String?
    updated_at          DateTime @default(now()) @db.Timestamptz
    users_sync          users_sync @relation(fields: [user_id], references: [id])

    @@schema("neon_auth")
}

model saved_content {
    id           Int      @id @default(autoincrement())
    user_id      String   @db.Text
    content_id   String?
    content_type String?
    saved_at     DateTime @default(now()) @db.Timestamptz
    users_sync   users_sync @relation(fields: [user_id], references: [id])

    @@unique([user_id, content_id, content_type])
    @@schema("neon_auth")
}

model comments {
    id           Int      @id @default(autoincrement())
    user_id      String   @db.Text
    article_id   String
    content      String   @db.Text
    created_at   DateTime @default(now()) @db.Timestamptz
    updated_at   DateTime @updatedAt @db.Timestamptz
    users_sync   users_sync @relation(fields: [user_id], references: [id])
    // Threaded comments: optional parent and children
    parent_id    Int?
    parent       comments? @relation("CommentChildren", fields: [parent_id], references: [id])
    children     comments[] @relation("CommentChildren")
    
    @@schema("neon_auth")
}

